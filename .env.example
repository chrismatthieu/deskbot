# Amcrest Camera AI System Configuration
# Copy this file to .env and fill in your values

# ChatGPT API Configuration (Required if using ChatGPT)
OPENAI_API_KEY=your_openai_api_key_here

# AI Model Configuration
AI_PROVIDER=ollama  # Options: "ollama" or "chatgpt"

# Camera Configuration (Required)
CAMERA_HOSTNAME=192.168.0.42
CAMERA_USERNAME=admin
CAMERA_PASSWORD=your_camera_password_here
CAMERA_PORT=80

# Audio Configuration (Optional - defaults shown)
CAMERA_AUDIO_CHANNEL=1
CAMERA_AUDIO_FORMAT=G.711A
CAMERA_AUDIO_VOLUME=80

# Wake Word Configuration (Optional - defaults shown)
WAKE_WORD_PHRASE=jarvis

# Voice Processing Configuration (Optional - defaults shown)
VOICE_SAMPLE_RATE=16000
VOICE_CHANNELS=1
VOICE_THRESHOLD=0.1
VOICE_SILENCE_TIMEOUT=2000
VOICE_RECORDING_DURATION=5000

# AI Vision Configuration (Optional - defaults shown)
AI_MODEL=qwen2.5vl:3b
AI_ANALYSIS_INTERVAL=1000
AI_CONFIDENCE_THRESHOLD=0.7
AI_MAX_RETRIES=3
